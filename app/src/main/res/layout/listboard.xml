<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/listblog"

    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="5dp"
    >

    <ImageView

        android:id="@+id/thumbnail"
        android:layout_width="89dp"
        android:layout_height="102dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="332dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="29dp"
            android:background="@drawable/reshape_edit"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  หัวข้อ:"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="284dp"
            android:layout_height="34dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="279dp"
                android:layout_height="29dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/reshape_edit"
                android:gravity="center|left"
                android:text="  ผู้โพส : " />

        </LinearLayout>


        <TextView
            android:id="@+id/job"
            android:layout_width="279dp"
            android:layout_height="212dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reshape_edit"
            android:gravity="left"
            android:text="  รายละเอียด :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="56dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/btn_apply"
                    android:gravity="center|clip_vertical|center_horizontal"
                    android:icon="@drawable/ic_done_black_24dp"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.523" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>