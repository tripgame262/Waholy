<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F75520">

            <Button
                android:id="@+id/button"
                android:layout_width="78dp"
                android:layout_height="39dp"
                android:background="@color/colorMain"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                android:text="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_more_vert_black_24dp"
                android:background="@color/colorMain"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="131dp"
            android:layout_height="136dp"
            android:background="@drawable/edit"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="244dp"
            android:layout_height="43dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="242dp"
            android:layout_height="40dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:text="Birth day"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="68dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="242dp"
            android:layout_height="45dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="117dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="379dp"
            android:layout_height="271dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Infomation"
            app:layout_constraintBottom_toTopOf="@+id/editText5"
            tools:layout_editor_absoluteX="15dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="375dp"
            android:layout_height="45dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Portfolio"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="520dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="378dp"
            android:layout_height="44dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Portfolio"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="468dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="374dp"
            android:layout_height="44dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Portfolio"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="573dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="UPDATE"
            android:textColor="#ffffff"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="629dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>